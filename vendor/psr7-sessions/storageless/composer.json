        }
    ],
    "require": {
        "php":                             "^7.4",
        "ext-json":                        "*",
        "psr/http-message":                "^1.0.1",
        "psr/http-server-handler":         "^1.0.1",
        "psr/http-server-middleware":      "^1.0.1",
        "lcobucci/jwt":                    "^3.3.1",
        "dflydev/fig-cookies":             "^2.0.1",
        "lcobucci/clock":                  "^1.3.0"
    },
    "require-dev": {
        "phpunit/phpunit":                      "^9.0.2",
        "laminas/laminas-diactoros":            "^2.2.3",
        "laminas/laminas-httphandlerrunner":    "^1.1.0",
        "infection/infection":                  "^0.16.1",
        "phpstan/phpstan":                      "^0.11.19",
        "phpstan/phpstan-phpunit":              "^0.11.2",
        "phpstan/phpstan-strict-rules":         "^0.11.1",
        "squizlabs/php_codesniffer":            "^3.5.4",
        "doctrine/coding-standard":             "^7.0.2"
    },
    "replace": {
        "ocramius/psr7-session": "self.version"
    },
    "autoload": {
        "psr-4": {
            "PSR7Sessions\\Storageless\\": "src/Storageless"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PSR7SessionsTest\\Storageless\\": "test/StoragelessTest"
        }
    }
}
